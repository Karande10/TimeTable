@model TimeTable.Models.ViewModels.InputViewModel

@{
    ViewData["Title"] = "Time Table Generator";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Time Table Configuration</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ProcessInitialInput" method="post" id="initialForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group row mb-3">
                            <label asp-for="NoOfWorkingDays" class="col-md-4 col-form-label"></label>
                            <div class="col-md-8">
                                <input asp-for="NoOfWorkingDays" class="form-control" />
                                <span asp-validation-for="NoOfWorkingDays" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="NoOfSubjectsPerDay" class="col-md-4 col-form-label"></label>
                            <div class="col-md-8">
                                <input asp-for="NoOfSubjectsPerDay" class="form-control" />
                                <span asp-validation-for="NoOfSubjectsPerDay" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="TotalSubjects" class="col-md-4 col-form-label"></label>
                            <div class="col-md-8">
                                <input asp-for="TotalSubjects" class="form-control" />
                                <span asp-validation-for="TotalSubjects" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            <label asp-for="TotalHoursForWeek" class="col-md-4 col-form-label"></label>
                            <div class="col-md-8">
                                <input asp-for="TotalHoursForWeek" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-8 offset-md-4">
                                <button type="submit" class="btn btn-primary" id="submitButton" disabled>
                                    Continue to Subject Hours
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/timeTable.js" asp-append-version="true"></script>
}